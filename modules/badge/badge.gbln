/// Read Sheriff version from goblin.yaml (top-level `version` key)
act sheriff_version_from_config()
    if file_exists("goblin.yaml") == false
        return "dev"
    end
    cfg_text   = read_text("goblin.yaml")
    sanitized  = yaml_sanitize(cfg_text)
    cfg        = yaml_parse(sanitized)
    if cfg == nil
        return "dev"
    end
    v = cfg["version"]
    if v == nil
        return "dev"
    end
    trimmed = ("" + v).trim
    if trimmed == ""
        return "dev"
    end
    return trimmed
end

/// NEW: Read repo info from goblin.yaml
act sheriff_repo_from_config()
    if file_exists("goblin.yaml") == false
        return nil
    end
    cfg_text   = read_text("goblin.yaml")
    sanitized  = yaml_sanitize(cfg_text)
    cfg        = yaml_parse(sanitized)
    if cfg == nil
        return nil
    end
    return cfg["repo"]  /// Returns the whole repo object or nil
end

/// Publish BADGE::VERSION and BADGE::REPO
act publish_tokens()
    version_str = sheriff_version_from_config()
    
    /// Version badge (existing)
    badge_html = "<span class=\"site-version\">" + version_str + "</span>"
    register_token("BADGE", "VERSION", badge_html)
    
    /// NEW: Repo info badge (GitHub-style)
    repo = sheriff_repo_from_config()
    if repo !== nil
        repo_html = build_repo_badge(repo, version_str)
        register_token("BADGE", "REPO", repo_html)
    else
        /// Register empty token if no repo config
        register_token("BADGE", "REPO", "")
    end
    
    return Unit
end

