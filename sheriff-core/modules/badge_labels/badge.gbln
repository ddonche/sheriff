/// Generate social sharing widget HTML
act generate_social_share_widget(portal, page_url, page_title)
    widgets_cfg | load_widgets_cfg(portal)
    if widgets_cfg.nix? => return ""
    if :valtype(widgets_cfg) != "map" => return ""
    
    badge_cfg | widgets_cfg["badge"]
    if badge_cfg.nix? => return ""
    if :valtype(badge_cfg) != "map" => return ""
    
    platforms | badge_cfg["social_sharing"]
    if platforms.nix? => return ""
    
    /// URL-encode the title and URL
    encoded_url | :url_encode(page_url)
    encoded_title | :url_encode(page_title)
    
    icons_html | ""
    
    for platform in platforms
        data | get_social_platform_data(platform)
        if data.nix? => skip
        
        url | data["url"]
        url | :update_where(url, "{url}", encoded_url)
        url | :update_where(url, "{title}", encoded_title)
        
        svg | data["svg"]
        
        icon | """
      <a href="{url}" target="_blank" rel="noopener noreferrer" class="social-icon" aria-label="Share on {platform}">
        {svg}
      </a>
    """
        update!(icons_html, icons_html + icon)
    xx
    
    if icons_html == "" => return ""
    
    return """
<div class="sheriff-social-share">
{icons_html}</div>
"""
xx

