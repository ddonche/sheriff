    name  | ""
    stars | ""
    forks | ""

    if !repo["url"].nix?
        :update!(url, "" + repo["url"])
    xx

    if !repo["name"].nix?
        :update!(name, "" + repo["name"])
    xx

    if !repo["stars"].nix?
        :update!(stars, "" + repo["stars"])
    xx

    if !repo["forks"].nix?
        :update!(forks, "" + repo["forks"])
