/// Compute "~N min read" label from an HTML body, or "" if empty.
/// Uses ~250 wpm and strips decimals by string-mangling the float.
act compute_readtime_label(body)
    if body.nix? => return ""

    /// Normalize & split into words
    norm | ""
    :update!(norm, :normalize_newlines("" + body))
    :update_where!(norm, "\t", " ")

    parts | :split(norm, " ")

    word_count | 0
    for p in parts
        t | :trim(p)
        if t != ""
            :update!(word_count, word_count + 1)
        xx
    xx

    if word_count == 0 => return ""

    /// Get minutes as float
    mins_f | word_count / 250

    /// Convert to string & strip everything after '.'
    mins_str   | "" + mins_f
    mins_whole | :keep_before(mins_str, ".")

    if mins_whole.nix? or :trim(mins_whole) == ""
        :update!(mins_whole, mins_str)
    xx

    mins_whole | :trim(mins_whole)

    /// Guard: if we somehow got "0" but have words, bump to "1"
    if mins_whole == "0"
        :update!(mins_whole, "1")
    xx

    /// Build final label as plain lowercase text
    label | ""
    if mins_whole == "1"
        :update!(label, "~ 1 min read")
    else
        :update!(label, "~ {mins_whole} min read")
    xx

    return label
xx

/// MAIN ENTRY
act apply_tokens(ctx)
    portal | ctx["portal"]
    body   | ctx["body"]

    if portal.nix? or body.nix? => return ctx

    cfg  | load_cfg(portal)
    ver  | extract_version(cfg)
    repo | extract_repo(cfg)

    /// BADGE::VERSION
    if ver == ""
        register_token("BADGE", "VERSION", "")
    else
        html_v | "<span class=\"sheriff-version-badge\">" + ver + "</span>"
        register_token("BADGE", "VERSION", html_v)
    xx

    /// BADGE::REPO
    if repo.nix?
        register_token("BADGE", "REPO", "")
    else
        html_repo | build_repo_badge(repo, ver)
        register_token("BADGE", "REPO", html_repo)
    xx

    /// BADGE::READTIME
    read_label | compute_readtime_label(body)

    if read_label == ""
        register_token("BADGE", "READTIME", "")
    else
        html_rt | ""
        :update!(html_rt, """
        <span class="sheriff-byline-readtime">
          {read_label}
        </span>
        """)
        register_token("BADGE", "READTIME", html_rt)
    xx

    util_icons_html | ""
    :update!(util_icons_html, build_util_icons_html())
    register_token("BADGE", "UTILICONS", util_icons_html)

    //// BADGE::SOCIAL_SHARE
    page_title | "Test Page Title"
    page_url   | "https://example.com/test-page"

    fm | ctx["frontmatter"]
    if !fm.nix? and :valtype(fm) == "map"
        title_val | fm["title"]
        if !title_val.nix?
            update!(page_title, "" + title_val)
        xx
    xx

    social_share_html | generate_social_share_widget(portal, page_url, page_title)
    register_token("BADGE", "SOCIAL_SHARE", social_share_html)
    ////

    rendered | :resolve_token(body)
    :update!(ctx["body"], rendered)

    /// THEN clear for next page
    clear_token("BADGE", "READTIME")
    return ctx
xx
