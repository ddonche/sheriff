/// modules/badge_labels/badge.gbln
/// Badge module — publishes BADGE::VERSION and BADGE::REPO
/// Reads from ../site/portals/{portal}/config.yall ONLY.

/// Load portal config (or nil if missing)
act load_cfg(portal)
    path | "../site/portals/{portal}/config.yall"
    if :file_exists(path) == false
        return nil
    xx
    return :yall_parse_file(path)
xx

/// Extract version: if missing OR empty → return "".
act extract_version(cfg)
    if cfg.nix? => return ""

    if :valtype(cfg) != "map"
        return ""
    xx

    v | cfg["version"]
    if v.nix? => return ""

    t | :trim("" + v)
    if t == "" => return ""

    return t
xx

/// Extract repo object: if missing → return nil.
act extract_repo(cfg)
    if cfg.nix? => return nil

    if :valtype(cfg) != "map"
        return nil
    xx

    repo | cfg["repo"]
    if repo.nix? => return nil

    /// Only accept maps as repo objects
    if :valtype(repo) != "map"
        return nil
    xx

    return repo
xx

/// Build the HTML for BADGE::REPO — matches sheriff-dark.css + React header
act build_repo_badge(repo, ver)
    /// Hard guard: if repo isn't a map, bail to "".
    if repo.nix?
        return ""
    xx

    if :valtype(repo) != "map"
        return ""
    xx

    url   | ""
    name  | ""
    stars | ""
    forks | ""

    if !repo["url"].nix?
        :update!(url, "" + repo["url"])
    xx

    if !repo["name"].nix?
        :update!(name, "" + repo["name"])
    xx

    if !repo["stars"].nix?
        :update!(stars, "" + repo["stars"])
    xx

    if !repo["forks"].nix?
        :update!(forks, "" + repo["forks"])
    xx

    /// If we somehow didn't get a URL, don't render a broken badge.
    if url == ""
        return ""
