/// modules/badge_labels/badge.gbln
/// Badge module — publishes BADGE::VERSION and BADGE::REPO
/// Reads from ../site/portals/{portal}/config.yall ONLY.

/// Load portal config (or nil if missing)
act load_cfg(portal)
    path | "../site/portals/{portal}/config.yall"
    if :file_exists(path) == false
        return nil
    xx
    return :yall_parse_file(path)
xx

/// Extract version: if missing OR empty → return "".
act extract_version(cfg)
    if cfg.nix? => return ""

    if :valtype(cfg) != "map"
        return ""
    xx

    v | cfg["version"]
    if v.nix? => return ""

    t | :trim("" + v)
    if t == "" => return ""

    return t
xx

/// Extract repo object: if missing → return nil.
act extract_repo(cfg)
    if cfg.nix? => return nil

    if :valtype(cfg) != "map"
        return nil
    xx

    repo | cfg["repo"]
    if repo.nix? => return nil

    /// Only accept maps as repo objects
    if :valtype(repo) != "map"
        return nil
    xx

    return repo
xx

/// Build the HTML for BADGE::REPO — matches sheriff-dark.css + React header
